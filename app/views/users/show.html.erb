<h2>ユーザー情報</h2>
<table class="table mt-5 mb-5">
  <tbody>
    <tr><td><%= @user.name %></td></tr>
    <tr><td><%= @user.email %></td></tr>
    <tr><td><%= @user.id %></td></tr>
  </tbody>
</table> 

 <%= link_to("編集", "/users/#{@user.id}/edit") %>

<hr>
  <table class="table mt-5 mb-5">
    <tbody>
    <h5>あなたの質問</h5>
    <% @user.question.each do |question| %>
    <tr><td><%= link_to(question.title, "/questions/#{question.id}") %></td></tr>
    <% end %>
    </tbody>
  </table>