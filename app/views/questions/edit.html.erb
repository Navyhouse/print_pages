<%= form_with(model: @question, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </div>
  <button type="submit" class="btn btn-primary">更新</button>
<% end %>