<div class="row">

  <div class="col-8"> <%# 左側の項目を8/12幅で設定 %>
    <%# bootstrap4でタブを実装 %>
    <ul class="nav nav-tabs">
      <li class="nav-item"><a class="nav-link active" data-toggle="tab">新着</a></li>
      <li class="nav-item"><a class="nav-link" data-toggle="tab">アクティブ</a></li>
      <li class="nav-item"><a class="nav-link" data-toggle="tab">未回答</a></li>
      <li class="nav-item"><a class="nav-link" data-toggle="tab">未解決</a></li>
      <li class="nav-item"><a class="nav-link" data-toggle="tab">注目</a></li>
      <li class="nav-item"><a class="nav-link" data-toggle="tab">解決済</a></li>
    </ul>

    <%# questionハッシュから取り出してリストに表示 %>
    <table class="table mt-6 mb-5">
      <%# <tbody> %>
        <% @question.each do |question| %>
          <tr>
            <td class="small">回答<%= question.answer.count %></td>
            <td class="font-weight-bold">
              <%= link_to question.title, question_path(question) %><br>
              <% question.tag_list.each do |tag| %>
                <span class="badge badge badge-info"><%= tag %></span>
              <% end %>
            </td>
            <td class="small">
              <%= question.user.name %><br>
              <%# <td><%= question.created_at.strftime('%Y/%m/%d %H:%M')%>
              <%= time_ago_in_words(question.created_at)+"前" %>
            </td>
          </tr>
        <% end %>
      <%# </tbody> %>
    </table>

    <%# ページネーションを表示kaminari %>
    <%= paginate @question %>

    <%# 質問するボタンで画面遷移 %>
    <%=link_to("questions/new") do %>
      <button class="btn btn-secondary btn-md" >質問する</button> 
    <%end%> 

  </div> <%# 左側の項目を8/12幅で設定の /div %>

  
  <div class="small col-3"> <%#右側の項目を4/12幅で設定%>
    <%#　「はじめてみましょう」リスト %>
    <div class="card mt-3" style="width: rem; ">
      <div class="card-header"> はじめてみましょう！</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">PrintPagesへログインする</li>
          <li class="list-group-item">PrintPagesの簡単な説明を読む</li>
          <li class="list-group-item">５つのMYタグを登録する</li>
          <li class="list-group-item">３つの回答へ高評価（＋）をする</li>
          <li class="list-group-item">回答または質問を投稿する</li>
        </ul>
    </div>

    <%# 回答してみませんかリスト %>
    <div class="card mt-3 border-danger" style="width: rem;">
      <div class="card-header alert-danger">回答してみませんか？</div>
        <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <% @random.each do |question| %>
          <%= link_to question.title, question_path(question) %>
          <% end %>
        </li>
        </ul>
    </div>

    <%# ユーザーランキングの項目 %>
    <table class="table mt-3" style="width: 17rem;">
      <tr><th>ユーザーランキング</th></tr>
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= user.answer.count %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div> <%# 右側の項目を4/12幅で設定の /div %>

</div>

